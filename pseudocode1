#1. Cari nilai KPK dari 3 dan 4
function KPK(a, b):
    max_num = max(a, b)
    while True:
        if max_num % a == 0 and max_num % b == 0:
            return max_num
        max_num += 1

a = 3
b = 4
hasil_kpk = KPK(a, b)
print("KPK dari", a, "dan", b, "adalah", hasil_kpk)

#2. menukar posisi dua variabel
function swap(x, y):
    temp = x
    x = y
    y = temp
    return x, y

piring1 = "manggis"
piring2 = "pisang"
piring3 = ""

piring3 = piring1
piring1 = piring2
piring2 = piring3
print("Setelah ditukar, piring 1 berisi:", piring1, "dan piring 2 berisi:", piring2)

#3. Hitung luas segitiga
function luasSegitiga(alas, tinggi):
    return 0.5 * alas * tinggi

alas = 25
tinggi = 30
luas_segitiga = luasSegitiga(alas, tinggi)
print("Luas segitiga dengan alas", alas, "dan tinggi", tinggi, "adalah", luas_segitiga)

#4. Hitung luas jajar genjang
function luasJajarGenjang(panjang, tinggi):
    return panjang * tinggi

panjang = 5
tinggi_jg = 3
luas_jajar_genjang = luasJajarGenjang(panjang, tinggi_jg)
print("Luas jajar genjang dengan panjang", panjang, "dan tinggi", tinggi_jg, "adalah", luas_jajar_genjang)

#5. Hitung volume tabung
function volumeTabung(jariJari, tinggi):
    return 3.14 * jariJari^2 * tinggi

jariJari = 3
tinggi_tabung = 5
volume_tabung = volumeTabung(jariJari, tinggi_tabung)
print("Volume tabung dengan jari-jari", jariJari, "dan tinggi", tinggi_tabung, "adalah", volume_tabung)

#6. Hitung volume kerucut
function volumeKerucut(diameter, tinggi):
    jariJari = diameter / 2
    return (1/3) * 3.14 * jariJari^2 * tinggi

diameter = 5
tinggi_kerucut = 4
volume_kerucut = volumeKerucut(diameter, tinggi_kerucut)
print("Volume kerucut dengan diameter", diameter, "dan tinggi", tinggi_kerucut, "adalah", volume_kerucut)
